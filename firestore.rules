rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an administrator.
    // For this to work, you must add the UIDs of your admin users to this list.
    // You can find a user's UID in the Firebase Authentication console.
    function isAdmin() {
      let adminUIDs = [
        "CHANGE_THIS_TO_YOUR_ADMIN_UID_1",
        "CHANGE_THIS_TO_YOUR_ADMIN_UID_2"
      ];
      return request.auth.uid in adminUIDs;
    }

    // Rules for the 'events' collection
    match /events/{eventId} {
      // Admins can read and write everything in an event document.
      // Any authenticated user can read the main event document data (name, date, etc.).
      allow read: if request.auth != null;
      allow write: if isAdmin();

      // Rules for subcollections within an event
      match /{subcollection}/{docId} {
        // Admins have full read/write access to all subcollections.
        // Authenticated users can read documents from subcollections.
        // This allows judges, competitors, etc., to see schedule, rubric, and competitor info.
        allow read: if request.auth != null;
        allow write: if isAdmin();
      }
    }
    
    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
