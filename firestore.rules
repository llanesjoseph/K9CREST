
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This function checks if the user's authentication token has a custom claim 'role' set to 'admin'.
    // This is the secure, recommended way to handle roles.
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // Checks if the user is logged in.
    function isAuthenticated() {
      return request.auth != null;
    }

    match /events/{eventId} {
      // Admins can read and write events.
      // Any authenticated user can read event details.
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      // Rules for all subcollections within an event.
      match /{subcollection}/{docId} {
         // Admins have full read/write access.
        allow write: if isAdmin();
        // Any authenticated user can read the data for viewing schedules, leaderboards, etc.
        allow read: if isAuthenticated();
      }
    }
  }
}
