
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is an admin.
    // IMPORTANT: You must replace the placeholder UIDs below with the
    // actual Firebase User IDs (UIDs) of your admin accounts.
    // You can find these in your Firebase Console under Authentication > Users.
    function isAdmin() {
      let admin_uids = [
        'REPLACE_WITH_ADMIN_USER_ID_1',
        'REPLACE_WITH_ADMIN_USER_ID_2',
        'k0jND1yS2YQ0w4i7f2aC3kFjG8y1' // Example UID, replace it
      ];
      return request.auth != null && request.auth.uid in admin_uids;
    }

    // Helper function to check if a user is logged in.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for the 'events' collection
    match /events/{eventId} {
      // Any authenticated user can read the main event documents (name, date, etc.).
      // Admins can create, update, or delete events.
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      // Rules for the subcollections within each event (competitors, arenas, schedule, etc.)
      match /{subcollection}/{docId} {
        // Admins have full read and write access to all subcollection documents.
        allow read, write: if isAdmin();

        // Non-admin authenticated users can READ data from these specific
        // subcollections, which is necessary for viewing schedules and leaderboards.
        // They cannot write or delete.
        allow read: if isAuthenticated() && subcollection in ['competitors', 'arenas', 'schedule', 'rubrics'];
      }
    }
  }
}
